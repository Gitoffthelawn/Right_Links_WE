{
	"manifest_version": 2,
	"version": "0.1a1",
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"author": "Infocatcher",
	"default_locale": "en",
	"applications": {
		"gecko": {
			"id": "rightLinksWE@infocatcher"
		}
	},

	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"<all_urls>",
		"activeTab",
		"tabs",
		"storage",
		"notifications"
	],
	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},
	"browser_action": {
		"browser_style": true,
		"default_title": "__MSG_extensionName__",
		"default_icon": {
			"16": "icon16.png",
			"24": "icon24.png"
		}
	}
}